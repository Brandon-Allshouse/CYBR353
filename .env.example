# Optimized Delivery System - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git - only commit this .env.example file

# IMPORTANT: If you add any new variables to your local .env file,
# you MUST update this .env.example file and push it to GitHub
# so other team members know what variables are needed.

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=delivery_system
DB_USER=root
DB_PASSWORD=your_mysql_password_here

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8080

# Session timeout in minutes (user logged out after this period of inactivity)
SESSION_TIMEOUT=30

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Enable/disable audit logging (true/false)
AUDIT_LOGGING_ENABLED=true

# Log file location (relative to project root)
LOG_FILE_PATH=logs/audit.log
